<section class="results">
  <h2 class="fit-heading">Search Result</h2>
  <% if (songs.length) { %>
    <p class="search-detail">Showing top <strong><%- songs.length %></strong> results for your search &laquo;<em><%- query %></em>&raquo;</p>

    <ul class="alt index">
      <% for (const song of songs) { %>
      <li>
        <% include partial/song-info %>
      </li>
      <% } %>
    </ul>
  <% } else { %>
    <p class="search-detail">No result found for your search &laquo;<em><%- query %></em>&raquo;</p>
  <% } %>
</section>
