<!DOCTYPE html>
<html >
<head>
  <% title = 'Three Angels Book' %>
  <% home = 'threeangels/book#' %>
  <% include partial/base_head %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
  <link rel='stylesheet prefetch' href='https://cdn.jsdelivr.net/foundation/6.2.0/foundation.min.css'>
  <link rel="stylesheet" href="threeangels/css/books.css">
</head>

<body>
  <div id="main-container" class="main-container nav-effect-1">

    <nav class="nav-menu nav-effect-1" id="menu-1">
      <h2 class="">Books</h2>
      <ul>
        <li><a class="" href="/threeangels/book/read">Read</a></li>
      </ul>
    </nav>

    <div class="main clearfix">

      <!-- Header Content -->
      <header id="header" class="page-header">
        <div class="page-header-container row">
          <!-- Logo -->
          <div class="main-logo">
            <a href="<%- home %>" class="logo">Books</a>
          </div>
          <div class="menu-search">
            <!-- Main Navigation -->
            <div class="main-navigation">
              <a href="<%- home %>">Menu</a>
            </div>
            <!-- Search -->
            <div class="catalog-search">
              <input class="shuffle-search input_field " type="search" autocomplete="off" value="" maxlength="128" id="input-search" />
              <label class="input_label" for="input-search">
                <span class="input_label-content">Search Library</span>
                <span class="input_label-search"></span>
              </label>
            </div>

          </div>
        </div>
      </header>


      <!-- Main Section -->
      <div class="page-container">

        <div class="page-title category-title">
          <!-- <h1>Book Viewer</h1> -->
        </div>

        <section id="book_list">

          <div class="toolbar row">
            <div class="filter-options small-12 medium-9 columns">
              <a href="<%- home %>" class="filter-item active" data-group="all">All Categories</a>
              <% for (const tag of tags ) { %>
              <a href="<%- home %>" class="filter-item" data-group="<%- tag.replace(' ', '') %>"><%- tag %></a>
              <% } %>
            </div>

            <div class="small-12 medium-3 columns">
              <select class="sort-options">
                <option value="" disabled selected>Sort by</option>
                <option value="" >Featured</option>
                <option value="title">Alphabetical</option>
                <option value="date-created">Published</option>
              </select>
            </div>
          </div>

          <div class="grid-shuffle">
            <ul id="grid" class="row">

              <% for (const book of books) { %>
              <li class="bi small-12 medium-6 columns"
                  data-groups='<%- JSON.stringify(book.summary.tags.map(x => x.replace(" ", ""))) %>'
                  data-date-created='<%- book.year %>'
                  data-title='<%- book.title %>'
                  data-color='#<%- book.summary.color %>'>
                <div class="bkimg">
                  <div class="bk-wrapper">
                    <div class="bk-book bk-bookdefault">
                      <div class="bkfr">
                        <div class="bk-cover" style="background-image: url('threeangels/img/<%- book.code %>.jpg')"></div>
                      </div>
                      <div class="bk-back"></div>
                      <div class="bklf"></div>
                    </div>
                  </div>
                </div>
                <div class="item-details">
                  <h3 class="bi_title"><%- book.title %></h3>
                  <p class="author">by <%- book.author %> &bull; <%- book.year %></p>
                  <p><%- book.summary.tdlr %></p>
                  <a href="/threeangels/book/<%- book.code %>" class="button preview">Read</a>
                </div>
                </li>
                <% } %>
              </ul>
            </div>

          </section>

        </div>

        <!-- Footer Content -->
        <footer id="footer" class="page-footer">
          <div class="row footer-wrapper">
            <div class="copyright small-12 columns">&copy; 2016 - wspecs</div>
          </div>
        </footer>

      </div>
      <!-- /main -->

      <div class="main-overlay">
        <div class="overlay-full"></div>
      </div>

    </div>
    <!-- /main-container -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='https://cdn.jsdelivr.net/foundation/6.2.0/foundation.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/Shuffle/4.0.0/shuffle.min.js'></script>
    <script src="threeangels/js/books.js"></script>
  </body>
  </html>

