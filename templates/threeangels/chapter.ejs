<div class="title">
  <h1><span><%- book.title %></span><%- chapter.title %></h1>
  <span>Author <i class='fa fa-user'></i> <%- book.author %></span>
</div>

<div id="content">
  <% for (const par of paragraphs) { %>
  <% if (!par.ref && ['based'].some(x => par.text.toLowerCase().indexOf(x) > -1)) { %>
    <p><i><%- par.text %></i></p>
  <% } else if (!par.ref && !['trustee'].some(x => par.text.toLowerCase().indexOf(x) > -1)) { %>
  <h1><%- par.text %></h1>
  <% } else { %>
  <p><b class="ref"><%- par.ref %></b> <%- par.text %></p>
  <% } %>
  <% } %>

  <div class="center">
    <% if (pagination.previous) { %>
    <span class="rerun">
      <a  href="threeangels/book/<%- book.code %>/<%- pagination.previous.number %>">
        <i class="fa fa-chevron-left"></i>
      </a>
    </span>
    <% } %>
    <span class="rerun"><a  href="threeangels/book/<%- book.code %>"><i class="fa fa-list-ul"></i></a></span>
    <% if (pagination.next ) { %>
    <span class="rerun">
      <a  title="<%- pagination.next.title %>" href="threeangels/book/<%- book.code %>/<%- pagination.next.number %>">
        <i class="fa fa-chevron-right"></i>
      </a>
    </span>
    <% } %>
  </div>
</div>
<a id="fab"  href="threeangels/book/<%- book.code %>"><i class="fa fa-list-ul"></i></a>
